<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_comman"
    tools:context=".fragments.MakeWithdrawalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_editbox_height">

            <TextView
                android:id="@+id/tv_Balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BALANCE"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/darkgreen"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:id="@+id/layout_user_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_editbox_height"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:drawableStart="@drawable/ic_account_balance_black_24dp"
                android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                android:drawablePadding="20dp"
                android:fontFamily="@font/open_sans_bold"
                android:hint="Amount"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:inputType="number"
                android:textColor="@color/colorGreen"
                android:textColorHint="@color/text_color"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/withdraw"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/open_sans_bold"
        android:gravity="center"
        android:text="Withdraw"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>