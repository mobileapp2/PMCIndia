<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<ImageView
    android:id="@+id/adminimage"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/user_image"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    />
    <ImageView
        android:id="@+id/userimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/admin_image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/adminLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:minHeight="45dp"
        android:layout_toRightOf="@id/adminimage"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_green"
                android:textSize="14sp"
                android:fontFamily="@font/open_sans_light"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:49 PM"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:fontFamily="@font/open_sans_light"
                android:padding="2dp"
                android:layout_gravity="end"/>




            
        </LinearLayout>



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/userLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:minHeight="45dp"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@id/userimage"
        android:layout_toStartOf="@id/userimage"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@color/green_chat"
        app:cardCornerRadius="5dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msgsend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="@font/open_sans_light"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/timeSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:49 PM"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:fontFamily="@font/open_sans_light"
                android:padding="2dp"
                android:layout_gravity="end"/>





        </LinearLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>